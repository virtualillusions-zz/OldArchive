<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
 
 <useStyles filename="nifty-default-styles.xml" />
 <useControls filename="nifty-default-controls.xml" />

  <style id="vButton">
      <attributes valign="center" visibleToMouse="true"/>
      <effect>
          <onStartScreen name="fade" start="#30"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f000" endColor="#fccb" post="true"/>
          <onHover name="focus"/>
          <onEndScreen name="fade" start="#ff" end="#00" length="600"/>
      </effect>
  </style>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="start" controller="com.vza.director.gui.GuiController">

    <layer id="layer" childLayout="horizontal" backgroundImage="Interface/icons/background.png">
         <!--Spacer--><panel childLayout="horizontal" width="2%" />
         <image id="legend" filename="Interface/icons/legendButton.dds" width="23%" align="left" style="vButton">
             <interact onClick="goToScreen(legend)"/>
            <effect>
             <onStartScreen name="move" mode="in" direction="left" length="300" startDelay="20" inherit="true"/>
            </effect>
         </image>
         <panel id="AC" childLayout="vertical" width="25%">
             <!--Spacer--><panel height="34.5%" />
             <image id="arena" filename="Interface/icons/arenaButton.dds" width="100%" height="16%" style="vButton">
                <interact onClick="goToScreen(arena)"/>
                <effect>
                 <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="200" inherit="true"/>
                </effect>
             </image>
             <image id="colosseum" filename="Interface/icons/colosseumButton.dds" width="100%" height="16%" style="vButton">
                <!--<interact onClick="goToScreen(colosseum)"/>-->
                <interact onClick="startGame()"/>
                <effect>
                    <onStartScreen name="move" mode="in" direction="bottom" length="300" startDelay="200" inherit="true"/>
                </effect>
             </image>
             <!--Spacer--><panel height="34.5%" />
         </panel>
         <panel id="FS" childLayout="vertical" width="25%">
             <!--Spacer--><panel height="34.5%" />
             <image id="field" filename="Interface/icons/fieldButton.dds" width="100%" height="16%" style="vButton">
                <interact onClick="goToScreen(field)"/>
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="300" inherit="true"/>
                </effect>
             </image>
             <image id="scroll" filename="Interface/icons/scrollButton.dds" width="100%" height="16%" style="vButton">
               <interact onClick="goToScreen(scroll)"/>
               <effect>
                    <onStartScreen name="move" mode="in" direction="bottom" length="300" startDelay="300" inherit="true"/>
                </effect>
             </image>
            <!--Spacer--><panel height="34.5%" />
        </panel>

         <image id="options" filename="Interface/icons/optionsButton.dds" width="23%" align="right" style="vButton">
           <interact onClick="goToScreen(options)"/>
           <effect>
                <onStartScreen name="move" mode="in" direction="right" length="300" startDelay="20" inherit="true"/>
            </effect>
         </image>
         <!--Spacer--><panel childLayout="horizontal" width= "2%" />
    </layer>
    <layer id="EXIT" childLayout="center">
        <control name="backTo" label="EXIT" function="goToScreen(quit)" width="20%" align="right" valign="bottom" />
    </layer>
  </screen>
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- legend -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="legend" controller="com.vza.director.gui.GuiController" >
    <layer id="layer" childLayout="vertical" backgroundImage="Interface/icons/background.png">
        <!--Spacer--><panel childLayout="vertical" height="25%"/>
        <label text="Difficulty:" color="#f00f" size="25%"/>
        <control name="button" label="poco" align="center"/>
        <control name="button" label="Normal" align="center"/>
        <control name="button" label="MUITO" align="center"/>
        <!--Spacer--><panel childLayout="vertical" height="25%" />
    </layer>
    <!--BACK_BUTTON-->
    <layer id="BACK" childLayout="center">
        <control name="backTo" label="Back" function="goToScreen(start)" width="20%" align="right" valign="bottom"/>
    </layer>
  </screen>
 <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- arena -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="arena" controller="com.vza.director.gui.GuiController" >
    <layer id="layer" childLayout="vertical" backgroundImage="Interface/icons/background.png">
        <label text="Arena"/>
    </layer>
    <!--BACK_BUTTON-->
    <layer id="BACK" childLayout="center">
        <control name="backTo" label="Back" function="goToScreen(start)" width="20%" align="right" valign="bottom"/>
    </layer>
  </screen>
     <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- colosseum -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="colosseum" controller="com.vza.director.gui.GuiController" >
    <layer id="layer" childLayout="vertical" backgroundImage="Interface/icons/background.png">
        <label text="Colosseum"/>
    </layer>
    <!--BACK_BUTTON-->
    <layer id="BACK" childLayout="center">
        <control name="backTo" label="Back" function="goToScreen(start)" width="20%" align="right" valign="bottom"/>
    </layer>
  </screen>
     <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- field -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="field" controller="com.vza.director.gui.GuiController" >
    <layer id="layer" childLayout="vertical" backgroundImage="Interface/icons/background.png">
        <label text="Field"/>
    </layer>
    <!--BACK_BUTTON-->
    <layer id="BACK" childLayout="center">
        <control name="backTo" label="Back" function="goToScreen(start)" width="20%" align="right" valign="bottom"/>
    </layer>
  </screen>
     <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- SideScroll -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="scroll" controller="com.vza.director.gui.GuiController" >
    <layer id="layer" childLayout="vertical" backgroundImage="Interface/icons/background.png">
        <label text="sideScroller"/>
    </layer>
    <!--BACK_BUTTON-->
    <layer id="BACK" childLayout="center">
       <control name="backTo" label="Back" function="goToScreen(start)" width="20%" align="right" valign="bottom"/>
    </layer>
  </screen>
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- options -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="options" controller="com.vza.director.gui.GuiController" >
    <layer id="optionsMENU" childLayout="center" backgroundImage="Interface/icons/background.png">
        <panel childLayout="vertical" height="100%">
            <label text="OPTIONS"/>
             <panel childLayout="horizontal" width="75%" align="center">
                <control name="button" label="CONTROLS" width="33.3%">
                   <interact onClick="optionsAddTab(optionsControls,optionsTabsLayer)" />
                </control>
                <control name="button" label="DISPLAY"width="33.3%">
                    <interact onClick="optionsAddTab(optionsDisplay,optionsTabsLayer)" />
                </control>
                <control name="button" label="AUDIO" width="33.3%">
                   <interact onClick="optionsAddTab(optionsAudio,optionsTabsLayer)" />
                </control>
              </panel>
              <panel id="optionsTabsLayer" childLayout="center" align="center" height="80%" width="75%" backgroundColor="#0">
                <control name="optionsControls"/>
              </panel>
        </panel>
    </layer>
    <layer childLayout="center">
      <control name="backTo" label="Back" function="goToScreen(start)" width="20%" align="right" valign="bottom"/>
    </layer>
  </screen>

    <!--optionsCONTROLSLayer-->
    <controlDefinition name="optionsControls" id="optionsControls">
        <panel childLayout="vertical" align="center" style="nifty-panel">
            <label text="[CONTROL CONFIG]"/>
            <panel childLayout="horizontal" width="90%" height="50%" align="center" backgroundColor="#111111f0">
                <panel childLayout="vertical" width="10%"/>
                <panel childLayout="vertical" width="37.5%" height="100%" backgroundColor="#CDCDCD">
                    <label text="Player1" />
                    <label text="Attack1"/>
                    <label text="Attack2"/>
                    <label text="Attack3"/>
                    <label text="Attack4"/>
                    <label text="Left"/>
                    <label text="Right"/>
                    <label text="Jump"/>
                    <label text="Crouch"/>
                    <label text="Special Modifier"/>
                    <label text="Combo Modifier"/>
                    <label text="RageRelease"/>
                    <label text="PauseMenu"/>
                </panel>
                <panel childLayout="vertical" width="5%"/>
                 <panel childLayout="vertical" width="37.5%" height="100%" backgroundColor="#CDCDCD">
                    <label text="Player2"/>
                    <label text="Attack1"/>
                    <label text="Attack2"/>
                    <label text="Attack3"/>
                    <label text="Attack4"/>
                    <label text="Left"/>
                    <label text="Right"/>
                    <label text="Jump"/>
                    <label text="Crouch"/>
                    <label text="Special Modifier"/>
                    <label text="Combo Modifier"/>
                    <label text="RageRelease"/>
                    <label text="PauseMenu"/>
                </panel>
            </panel>
        </panel>
    </controlDefinition>
    <!--optionsDisplayLayer-->
    <controlDefinition name="optionsDisplay" id="optionsDisplay" controller="com.vza.director.gui.SettingsController">
        <panel childLayout="vertical" align="center" valign="center" style="nifty-panel">
            <!--SPACER--><panel childLayout="vertical" height="25%"/>
            <panel id="Resolution_Depth" childLayout="horizontal">
                <!--RESOLUTION-->
                <!--SPACER--><panel childLayout="horizontal" width="10%"/>
                <label id="dropDownLabel" text="Resolution: " />
                <control id="resDDC" name="dropDownControl" width="25%"/>
                <!--bitDEPTH-->
                <!--SPACER--><panel childLayout="horizontal" width="2%"/>
                <label id="dropDownLabel" text="BitDepth " />
                <control id="bitDDC" name="dropDownControl" width="18%" />
            </panel>
            <!--SPACER--><panel childLayout="vertical" height="3%"/>
            <panel id="Refresh_Aliasing" childLayout="horizontal">
                <!--RESOLUTION-->
                <!--SPACER--><panel childLayout="horizontal" width="10%"/>
                <label id="dropDownLabel" text="RefreshRate " />
                <control id="refDDC" name="dropDownControl" width="16%" />
                <!--bitDEPTH-->
                <!--SPACER--><panel childLayout="horizontal" width="2%"/>
                <label id="dropDownLabel" text="Anti-aliasing " />
                <control id="antDDC" name="dropDownControl" width="13%" />
            </panel>
            <!--SPACER--><panel childLayout="vertical" height="3%"/>
             <panel id="fullscreen" childLayout="horizontal">
                 <!--SPACER--><panel childLayout="horizontal" width="25%"/>
                 <label text="FullScreen "/>
                 <control id="fsCB" name="checkbox" checked="false">
                 </control>
                 <label text=" V-sync "/>
                 <control id="vsCB" name="checkbox" checked="false">
                 </control>
            </panel>
        </panel>
    </controlDefinition>
    <!--optionsAUDIOLayer-->
    <controlDefinition name="optionsAudio" id="optionsAudio"controller="com.vza.director.gui.SettingsController">
        <panel childLayout="vertical" align="center" valign="center" style="nifty-panel">
             <!--SPACER--><panel childLayout="vertical" height="25%"/>
             <panel id="fullscreen" childLayout="horizontal">
                 <!--SPACER--><panel childLayout="horizontal" width="25%"/>
                 <label text="Music "/>
                 <!--SPACER--><panel childLayout="horizontal" width="3%"/>
                 <control name="checkbox" checked="false" />
            </panel>
            <!--SPACER--><panel childLayout="vertical" height="3%"/>
            <panel id="fullscreen" childLayout="horizontal">
                 <!--SPACER--><panel childLayout="horizontal" width="25%"/>
                 <label text="SFX"/>
                 <!--SPACER--><panel childLayout="horizontal" width="5.5%"/>
                 <control name="checkbox" checked="false" />
            </panel>
         </panel>
    </controlDefinition>
    <!--backToStart_BUTTONLayer-->
    <controlDefinition name="backTo" controller="com.vza.director.gui.GuiController">
        <panel childLayout="center">
            <control name="button" width="100%" align="right" valign="bottom">
                <interact onClick="$function"/>
            </control>
        </panel>
    </controlDefinition>


  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- sure to exit popup -->
  <registerSound id="popup" filename="Interface/sound/popup.wav" />
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <popup id="popupExit" childLayout="center" backgroundColor="#000a">
    <effect>
      <onStartScreen name="fade" startColor="#0000" endColor="#000a" length="500" />
      <onStartScreen name="playSound" sound="popup" startDelay="600" />
      <onEndScreen name="fade" startColor="#000a" endColor="#0000" length="500" startDelay="250" />
    </effect>
    <panel style="nifty-panel-red" childLayout="center" padding="18px,28px,40px,16px" width="30%" height="20%" align="center" valign="center">
      <effect>
        <onStartScreen name="fade" start="#0" end="#f" length="150" startDelay="500"/>
        <onStartScreen name="imageSize" timeType="exp" factor="3.5" startSize="1.5" endSize="1.0" inherit="true" length="150" startDelay="500"/>
        <onEndScreen name="fade" start="#f" end="#0" length="150" startDelay="0"/>
        <onEndScreen name="imageSize" timeType="exp" factor="3.5" startSize="1.0" endSize="1.5" inherit="true" length="150" startDelay="0"/>
      </effect>
      <panel childLayout="vertical" align="center" valign="center">
        <effect>
          <onStartScreen name="alphaHide" length="700" inherit="true" />
          <onEndScreen name="fade" length="10" start="#f" end="#0" inherit="true" />
        </effect>
        <panel childLayout="center" height="70%" width="100%">
          <text text="Really want to Exit?" style="base-font" align="center" valign="center" color="#000f"/>
        </panel>
        <panel childLayout="horizontal" align="center" height="30%">
          <panel childLayout="center" width="50%">
            <control id="yesButton" name="button" label="Yes" width="80%" align="center">
              <interact onClick="popupExit(yes)" />
            </control>
          </panel>
          <panel childLayout="center" width="50%">
            <control  id="noButton" name="button" label="No" width="80%" align="center">
              <interact onClick="popupExit(no)" />
            </control>
          </panel>
        </panel>
      </panel>
    </panel>
  </popup>

</nifty>